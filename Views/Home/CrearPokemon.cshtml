@{
    ViewData["Title"] = "Crear Pokemon";
}
<div class="text-center">
    <p class="fuente titulo">Crear Pokemón</p>

    <form action='@Url.Action("GuardarPokemon", "Home")' method="Post" enctype="multipart/form-data">
        <div class="form-group">           
            <h3 class="fuente2 mb-1">Ingrese el nombre del pokemón</h3> 
            <input type="text" name="Nombre" required autocomplete="off"/>
        </div>

        <div class="form-group">           
            <h3 class="fuente2 mb-1">Ingrese la foto del pokemón</h3> 
            <input type="file" class="form-control" name="Imagen" required autocomplete="off"/>
        </div> 

        <div class="form-group">           
            <h3 class="fuente2 mb-1">Ingrese el tipo 1</h3> 
            <input type="text" name="Tipo1" required autocomplete="off"/>
        </div> 

        <div class="form-group">           
            <h3 class="fuente2 mb-1">Ingrese el tipo 2</h3> 
            <input type="text" name="Tipo2" required autocomplete="off"/>
        </div> 

        <div class="form-group">           
            <h3 class="fuente2 mb-1">Ingrese la vida</h3> 
            <input type="text" name="Hp" required autocomplete="off"/>
        </div> 

        <div class="form-group">           
            <h3 class="fuente2 mb-1">Ingrese el ataque</h3> 
            <input type="int" name="Attack" required autocomplete="off"/>
        </div>  
        
        <div class="form-group">           
            <h3 class="fuente2 mb-1">Ingrese la defensa</h3> 
            <input type="int" name="Defense" required autocomplete="off"/>
        </div>
        
        <div class="form-group">           
            <h3 class="fuente2 mb-1">Ingrese la velocidad de ataque</h3> 
            <input type="int" name="SpA" required autocomplete="off"/>
        </div>
        
        <div class="form-group">           
            <h3 class="fuente2 mb-1">Ingrese la velocidad de defensa</h3> 
            <input type="int" name="SpD" required autocomplete="off"/>
        </div>  

        <div class="form-group">           
            <h3 class="fuente2 mb-1">Ingrese la velocidad</h3> 
            <input type="int" name="Speed" required autocomplete="off"/>
        </div>  
              
        <div class="d-grid gap-2">
            <button type="submit" class="fuente btn btn-warning btn-lg mt-4">Guardar</button>
        </div>
    </form>
</div>