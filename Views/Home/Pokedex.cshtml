@{
    ViewData["Title"] = "Pokedex";
}

<meta charset="UTF-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet">

<div>
  <select class="fuente2 mt-2" id="filtroPoke" onchange="GetDatta()">
    <option class="fuente2" value="1">Primera generacion</option>
    <option class="fuente2" value="2">Segunda generacion</option>
    <option class="fuente2" value="3">Tercera generacion</option>
    <option class="fuente2" value="4">Cuarta generacion</option>
    <option class="fuente2" value="5">Quinta generacion</option>
    <option class="fuente2" value="6">Sexta generacion</option>
    <option class="fuente2" value="7">Septima generacion</option>
    <option class="fuente2" value="8">Octava generacion</option>
  </select>
</div>

<div id="containerr"></div>

<div class="modal fade" id="ModalPokemon" aria-labelledby="exampleModalLAbel" aria-hidden="true" tabindex="-1">
  <div class="modal-dialog">
      <div class="modal-content">
      <div class="modal-header">
          <h5 class="modal-title">Datos del pokemon</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
          <p>Modal body text goes here.</p>
          <img Id="FotoPokemon">
          <div Id="NombrePokemon"></div>
          <div Id="Tipos"></div>
          <div Id="Stats"></div>
      </div>
      <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
      </div>
      </div>
  </div>
</div>