<div id="containerr"></div>
      

<div class="modal fade" id="ModalPokemon" aria-labelledby="exampleModalLAbel" aria-hidden="true" tabindex="-1">
  <div class="modal-dialog">
      <div class="modal-content">
      <div class="modal-header">
          <h5 class="modal-title">Datos del pokemon</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
          <p>Modal body text goes here.</p>
          <img Id="FotoPokemon">
          <div Id="NombrePokemon"></div>
          <div Id="Tipos"></div>
          <div Id="Stats"></div>
      </div>
      <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
      </div>
      </div>
  </div>
</div>

<script type ="text/javascript">
function MostrarPokemon(Id){

  $.ajax(
    //alert(Id),
    {
      type:'GET',
      dataType:'JSON',
      url: 'https://pokeapi.co/api/v2/pokemon/'+ Id,
      //Data: {IdPokemon: Id},
      success:
        function (response)
        {
          console.log(response.name );
          $("#NombrePokemon").html(response.name);
        }
    });  
}
</script>